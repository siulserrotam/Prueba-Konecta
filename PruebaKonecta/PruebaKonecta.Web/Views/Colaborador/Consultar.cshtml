@model PruebaKonecta.Core.Colaborador

@{
    ViewBag.Title = "Consultar Colaborador";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #34495e;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 15px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus {
            border-color: #2980b9;
            outline: none;
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s ease;
        text-decoration: none;
    }

    .btn-primary {
        background: #2980b9;
        color: white;
    }

        .btn-primary:hover {
            background: #1f6391;
        }

    .btn-secondary {
        background: #7f8c8d;
        color: white;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background: #5f6a6a;
        }

    .alert {
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .alert-danger {
        background: #e74c3c;
        color: white;
    }

    h3 {
        margin-top: 25px;
        color: #27ae60;
    }

    ul.custom-list {
        list-style: none;
        padding: 0;
        margin-top: 10px;
        background: #fafafa;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

        ul.custom-list li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            ul.custom-list li:last-child {
                border-bottom: none;
            }

        ul.custom-list strong {
            color: #2c3e50;
        }
</style>

<div class="container">
    <h2>Consultar Colaborador</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Consultar", "Colaborador", FormMethod.Post))
    {
        <label>Número de Identificación:</label>
        <input type="text" name="numeroIdentificacion" placeholder="Ingrese el número" required />

        <button type="submit" class="btn btn-primary">Consultar</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Regresar</a>
    }

    @if (Model != null)
    {
        <h3>Datos del Colaborador:</h3>
        <ul class="custom-list">
            <li><strong>Nombres:</strong> @Model.Nombres</li>
            <li><strong>Apellidos:</strong> @Model.Apellidos</li>
            <li><strong>Salario:</strong> $@Model.Salario</li>
            <li><strong>Área:</strong> @Model.IdArea</li>
        </ul>
    }
</div>
